---
---
/* Responsive App base css
 * 
 * Controls full screen responsive layout
 * To edit styles, edit style.css
 *
 */

/* Width of panels
 * default 284px
 * recommend no larger than 320px 
 */
panelsize = 284px

/* Minimum screen width for screen size to be defined as "large"
 * default 640px
 */

/* normalize */
html, body
  margin 0
  height 100%
  width 100%
  max-width 100%
  overflow hidden

h1
  font-size 2em

img
  border 0

/* responsive-app elements (defaults small screen) */

/* ra-container element contains all other elements
 * 
 * The ra framework uses css transforms to move the container
 * to show and hide off screen panels
 */
#ra-container
  position absolute
  left 0px
  width 100%
  height 100%

/* ra-panel1 is positioned on the left and is hidden when screen size is small
 */
#ra-panel-l
  position absolute
  width panelsize
  max-width 100%
  height 100%
  left panelsize * -1
  overflow-y scroll

#ra-panel-l-header
  
#ra-panel-l-content
  width 100%

/* ra-headmatter element contains the header, subheader, and nav
 * 
 * The ra framework will move the headmatter from to top of the screen or 
 * the top of panel1 depending on screen size
 */
#ra-headmatter
  width 100%

#ra-header
  width 100%

#ra-header-floatleft
  float left

#ra-header-floatright
  float right

#ra-nav
  width 100%

#ra-subhead
  float left

/* showhide element listens for click events to show and hide the nav-buttons
 * hidden on large screens
 */
#ra-nav-btn-showhide
  float left
  clear both

/* navigation buttons container
 * visibility toggled by nav-showhide
 */
#ra-nav-buttons
  float right

#ra-main
  position absolute
  left 0px
  height 100%
  width 100%
  overflow-y none
/* responsive menu only appears on small screens
 * contains buttons to show and hide side panels
 */
#ra-main-responsivemenu
  width 100%
/* responsivemenu button shows/hides left panel on click
 */
#ra-main-responsivemenu-btn-l
  float left
/* responsivemenu button shows/hides right panel on click
 */
#ra-main-responsivemenu-btn-r
  float right

/* main full screen content */
#ra-main-content
  overflow-y scroll
  height 100%

/* right/bottom panel
 * appears at bottom of screen on large screens
 * hidden on right on small screens
 */
#ra-panel-r
  position absolute
  width panelsize
  bottom 0
  max-width 100%
  height 100%
  overflow-y auto
  right panelsize * -1


#ra-panel-r-header
  
#ra-panel-r-content
  width 100%

/* ra-cover covers the main content on small screens when side panels are open
 * clicking on the cover returns the view to the main content
 */
#ra-cover
  position absolute
  opacity 0
  width 100%
  height 100%

/* large screens */
@media only screen and (min-width: 640px)
  #ra-main
    left panelsize
  #ra-panel-l
    left 0
  #ra-panel-r
    left panelsize
    height auto
    min-height 0
    max-height 50%
    width 100%

/* hiding elements */
.ra-hidden
  display none !important

/* clearfix */
.clearfix:before,
.clearfix:after 
    content ''
    display table
.clearfix:after 
    clear both