/* css transitions */
#ra-container
  transition transform .5s
  -webkit-transition -webkit-transform .5s
#ra-panel-l
#ra-panel-r
  transition width .5s
  -webkit-transition width .5s
/* your styles here */

/* #ra-container has .ra-small .ra-large or .ra-fullscreen classes
 * depending on app state
 * this can be very useful for styling
 */

$green = #007a4d
$lgreen = lighten($green, 10%)

#ra-responsivemenu
  background $green
  color #fff
#ra-responsivemenu-btn-l
  border-right rgba(0,0,0,.3) 1px solid
#ra-responsivemenu-header
  float right
#ra-headmatter
  -moz-box-shadow:    0px 1px 2px 0px rgba(0,0,0,0.20);
  box-shadow:         0px 1px 2px 0px rgba(0,0,0,0.20);
  

html, body
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size 15px

h1
  font-size 2em
  font-weight bold

h2
  font-size 1.5em
  font-weight bold
  
h3
  font-size 1.2em
  font-weight bold

h4
  margin 0
  font-weight bold
img
  vertical-align middle
hr
  border none
  margin 1em 0
  height 1px
  background #999999

.header
  padding 0 .5em
.logo-right
  float right
  margin-top -3px
  vertical-align middle
.nav
  background $green
  color #fff
  font-weight bold
  .btn-active
    background $lgreen
  .nav-left
    float left
    padding .5em
    //text-shadow 1px 1px rgba(0,0,0,.2)
  .nav-right
    float right
    padding .5em

.ra-small .nav .nav-left
  width auto
  float none
  margin .25em
  border-radius 3px


#fdw-controls
#fhp-controls
  padding .5em

input[type="checkbox"]
input[type="radio"]
  display none

input[type="checkbox"] + label 
input[type="radio"] + label
  padding 12px .5em .5em 44px
  background-position 0 0
  background-repeat no-repeat
  display inline-block
  border-radius .5em

        
input[type="checkbox"] + label
  background-image url(../img/check_unchecked.png) 
input[type="radio"] + label
  background-image url(../img/radio_unchecked.png)

input[type="checkbox"]:checked + label
  background-image url(../img/check_checked.png)
input[type="radio"]:checked + label
  background-image url(../img/radio_checked.png)  

input[type="checkbox"]:checked + .block-label
input[type="radio"]:checked + .block-label
  background-color #eeeeee

input[type="checkbox"]:disabled + label
  background-image url(../img/check_disabled.png)
input[type="radio"]:disabled + label
  background-image url(../img/radio_disabled.png)

input[type="radio"] + label 
input[type="checkbox"] + label
  .show-when-checked
    display none

input[type="radio"]:checked + label
input[type="checkbox"]:checked + label
  .show-when-checked
    display initial

#map
  width 100%
  height 100%